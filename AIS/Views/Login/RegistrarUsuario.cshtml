@model AIS.Usuarios
@{
    ViewBag.Title = "RegistrarUsuario";

}

<link href="~/Content/CSS/Anim.css" rel="stylesheet" />

<div style="text-align:center; margin-top:100px">

    <div class="shadow-drop-2-center" style="margin:0px auto; width:50%">

        <div class="fade-in">
            <br />
            <label class="text-primary">
                Registrate Gratis
            </label>
            <br />
            <label class="text-danger">
                @ViewBag.LoginError
            </label>
            <br />
            <form action="@Url.Action("RegistrarUsuario" , "Login")" method="post">
                <input type="text" id="nombre" class="form-control" style="margin:0px auto; text-align:center" name="nombre" placeholder="Nombre">
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                <br />
                <input type="text" id="app" class="form-control" style="margin:0px auto; text-align:center" name="app" placeholder="Apellido paterno">
                @Html.ValidationMessageFor(model => model.app, "", new { @class = "text-danger" })
                <br />
                <input type="text" id="apm" class="form-control" style="margin:0px auto; text-align:center" name="apm" placeholder="Apellido materno">
                @Html.ValidationMessageFor(model => model.apm, "", new { @class = "text-danger" })
                <br />
                <input type="text" id="usuario" class="form-control" style="margin:0px auto; text-align:center" name="usuario" placeholder="Nombre de usuario">
                @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                <br />
                <input type="password" id="contraseña" class="form-control " style="margin: 0px auto; text-align: center" name="contraseña" placeholder="Contraseña">
                @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })

                <br />
                <input type="submit" class="btn btn-primary" value="Registrar" style="width:60%">
            </form>
            <br />
            <br />
        </div>
    </div>
</div>

